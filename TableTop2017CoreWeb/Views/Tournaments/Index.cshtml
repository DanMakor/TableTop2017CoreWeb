@model IEnumerable<TableTop2017CoreWeb.Models.Tournament>

@{
    ViewData["Title"] = "Index";
}

<h2>Tournament Ratios</h2>

<table class="table">
    <thead>
        <tr>
                <th>
                    @Html.DisplayNameFor(model => model.BattleScoreRatio)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.SportsmanshipScoreRatio)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.ArmyScoreRatio)
                </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.BattleScoreRatio)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.SportsmanshipScoreRatio)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ArmyScoreRatio)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.Id">Edit</a>
            </td>
        </tr>
}
    </tbody>
</table>
