@model TableTop2017CoreWeb.Models.PairRoundMatchupEditViewModel

@{
    ViewData["Title"] = "AllRoundsEdit";
}

<h2>AllRoundsEdit</h2>

<h4>RoundMatchups</h4>
<hr />
<form asp-action="PairRoundMatchupEdit">
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
    <input type="hidden" asp-for="Id" />
    <input type="hidden" asp-for="RoundNo" />
    <div class="row">
        <div class="col-md-8 col-md-offset-2">
            <h3 class="text-center text-primary">Round @Model.RoundNo</h3>
            <div class="col-md-4">
                <h4 class="mt-sm text-secondary">Player One</h4>
                <div class="form-group">
                    <select asp-for="PlayerOneId">
                        @foreach (var item in Model.Players)
                        {
                            <option selected="@(item.Id == Model.PlayerOneId)" value="@item.Id">
                                @item.Name
                            </option>
                        }
                    </select>
                    <span asp-validation-for="PlayerOneId" class="text-danger"></span>
                </div>
                @if (Model.PlayerTwoId != 0.5)
                {
                    <div class="form-group">
                        <label asp-for="PlayerOneBattleScore" class="control-label"></label>
                        <input asp-for="PlayerOneBattleScore" class="form-control" />
                        <span asp-validation-for="PlayerOneBattleScore" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="PlayerOneSportsmanshipScore" class="control-label"></label>
                        <input asp-for="PlayerOneSportsmanshipScore" class="form-control" />
                        <span asp-validation-for="PlayerOneSportsmanshipScore" class="text-danger"></span>
                    </div>
                    <h4 class="mt-sm text-secondary">Player Two</h4>
                    <div class="form-group">
                        <select asp-for="PlayerTwoId">
                            @foreach (var item in Model.Players)
                            {
                                <option selected="@(item.Id == Model.PlayerTwoId)" value="@item.Id">
                                    @item.Name
                                </option>
                            }
                        </select>
                        <span asp-validation-for="PlayerTwoId" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="PlayerTwoBattleScore" class="control-label"></label>
                        <input asp-for="PlayerTwoBattleScore" class="form-control" />
                        <span asp-validation-for="PlayerTwoBattleScore" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="PlayerTwoSportsmanshipScore" class="control-label"></label>
                        <input asp-for="PlayerTwoSportsmanshipScore" class="form-control" />
                        <span asp-validation-for="PlayerTwoSportsmanshipScore" class="text-danger"></span>
                    </div>
                }
            </div>
            <div class="col-md-offset-1 col-md-1"><h3>VS.</h3></div>
            <div class="col-md-offset-1 col-md-4">
                @if (Model.PlayerThreeId != 0.5)
                {
                    <h4 class="mt-sm text-secondary">Player Three</h4>
                    <div class="form-group">
                        <select asp-for="PlayerThreeId">
                            @foreach (var item in Model.Players)
                            {
                                <option selected="@(item.Id == Model.PlayerThreeId)" value="@item.Id">
                                    @item.Name
                                </option>
                            }
                        </select>
                        <span asp-validation-for="PlayerThreeId" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="PlayerThreeBattleScore" class="control-label"></label>
                        <input asp-for="PlayerThreeBattleScore" class="form-control" />
                        <span asp-validation-for="PlayerThreeBattleScore" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="PlayerThreeSportsmanshipScore" class="control-label"></label>
                        <input asp-for="PlayerThreeSportsmanshipScore" class="form-control" />
                        <span asp-validation-for="PlayerThreeSportsmanshipScore" class="text-danger"></span>
                    </div>
                }
                else
                {

                }
                @if (Model.PlayerTwoId != 0.5)
                {
                    <h4 class="mt-sm text-secondary">Player Four</h4>
                    <div class="form-group">
                        <select asp-for="PlayerFourId">
                            @foreach (var item in Model.Players)
                            {
                                <option selected="@(item.Id == Model.PlayerFourId)" value="@item.Id">
                                    @item.Name
                                </option>
                            }
                        </select>
                        <span asp-validation-for="PlayerFourId" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="PlayerFourBattleScore" class="control-label"></label>
                        <input asp-for="PlayerFourBattleScore" class="form-control" />
                        <span asp-validation-for="PlayerFourBattleScore" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="PlayerFourSportsmanshipScore" class="control-label"></label>
                        <input asp-for="PlayerFourSportsmanshipScore" class="form-control" />
                        <span asp-validation-for="PlayerFourSportsmanshipScore" class="text-danger"></span>
                    </div>
                }
            </div>
        </div>
    </div>
    <p class="text-danger">@TempData["Errors"]</p>
    <div class="row">
        <div class="col-md-offset-2 col-md-8 mt-sm">
            <div class="col-md-1">
                <div class="form-group">
                    <input type="submit" value="Save" class="btn btn-primary" />
                </div>
            </div>
        </div>
    </div>
</form>
<div>
    <a asp-action="AllRounds" asp-controller="Admin">Back to List</a>
</div>

