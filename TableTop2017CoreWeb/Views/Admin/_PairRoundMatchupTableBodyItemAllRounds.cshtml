@model TableTop2017CoreWeb.Models.PairRoundMatchup

@{ Boolean bye = false;
    if (Model.PlayerTwo == null)
    {
        bye = true;
    }
}
    
@*PlayerOne and PlayerTwo are the first team
PlayerThree and PlayerFour are the second team*@
<tr class="@(bye ? "bg-warning" : " ")">
    <td>
        @Html.DisplayFor(model => model.RoundNo)
    </td>
    @if (!bye)
    {
        <td>
            @Html.DisplayFor(model => model.PlayerOneSportsmanshipScore)
        </td>
        <td>
            @Html.DisplayFor(model => model.PlayerOneBattleScore)
        </td>
    }
    else
    {
        <td></td>
        <td></td>
    }
    <td>
        @Html.DisplayFor(model => model.PlayerOne.Name)
    </td>
    @if (!bye)
    {
        <td>
            @Html.DisplayFor(model => model.Table)
        </td>
    }
    else
    {
        <td></td>

    }
    @*If this is a bye round*@
    @if (bye)
    {
        <td class="text-warning">[_BYE_]</td>
        <td></td>
        <td></td>
    }
    else
    {
        <td>
            @Html.DisplayFor(model => model.PlayerThree.Name)
        </td>
        <td>
            @Html.DisplayFor(model => model.PlayerThreeBattleScore)
        </td>
        <td>
            @Html.DisplayFor(model => model.PlayerThreeSportsmanshipScore)
        </td>
    }
    <td>
        <a asp-action="AllRoundsEdit" asp-route-id="@Model.Id">Edit</a>
    </td>
</tr>
@if (!bye)
{
    <tr>
        <td>

        </td>
        <td>
            @Html.DisplayFor(model => model.PlayerTwoSportsmanshipScore)
        </td>
        <td>
            @Html.DisplayFor(model => model.PlayerTwoBattleScore)
        </td>
        <td>
            @Html.DisplayFor(model => model.PlayerTwo.Name)
        </td>
        <td>
        </td>
        <td>
            @Html.DisplayFor(model => model.PlayerFour.Name)
        </td>
        <td>
            @Html.DisplayFor(model => model.PlayerFourBattleScore)
        </td>
        <td>
            @Html.DisplayFor(model => model.PlayerFourSportsmanshipScore)
        </td>
    </tr>
}

