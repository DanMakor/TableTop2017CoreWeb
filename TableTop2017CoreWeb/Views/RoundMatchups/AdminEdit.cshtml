@model TableTop2017CoreWeb.Models.AdminEditViewModel

@{
    ViewData["Title"] = "MatchupsEdit";
}

<h2>MatchupsEdit</h2>

<h4>RoundMatchups</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="AdminEdit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="RoundMatchup.Id" />
            <div class="form-group">
                <label asp-for="RoundMatchup.PlayerOneId" class="control-label"></label>
                <select asp-for="RoundMatchup.PlayerOneId">
                   @foreach (var item in Model.Players)
                    {
                                <option selected="@(item.Id == Model.RoundMatchup.PlayerOneId)"  value="@item.Id">
                                    @item.Name
                                </option>
                    }
                </select>
                <span asp-validation-for="RoundMatchup.PlayerOneId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="RoundMatchup.PlayerTwoId" class="control-label"></label>
                <select asp-for="RoundMatchup.PlayerTwoId">
                    @foreach (var item in Model.Players)
                    {
                                <option selected="@(item.Id == Model.RoundMatchup.PlayerTwoId)"  value="@item.Id">
                                    @item.Name
                                </option>
                    }
                </select>
                <span asp-validation-for="RoundMatchup.TableNo" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="RoundMatchup.TableNo" class="control-label"></label>
                <input asp-for="RoundMatchup.TableNo" value="" class="form-control" />
                <span asp-validation-for="RoundMatchup.PlayerTwoId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-default" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Admin">Back to List</a>
</div>

